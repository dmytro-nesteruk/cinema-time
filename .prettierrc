{
	"$schema": "https://json.schemastore.org/prettierrc.json",
	"useTabs": true,
	"tabWidth": 2,
	"endOfLine": "lf",
	"singleQuote": false,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@app/(?!.*(sc|sa|c)ss)",
		"^@pages/(?!.*(sc|sa|c)ss)",
		"^@widgets/(?!.*(sc|sa|c)ss)",
		"^@features/(?!.*(sc|sa|c)ss)",
		"^@entities/(?!.*(sc|sa|c)ss)",
		"^@shared/(?!.*(sc|sa|c)ss)",
		"^../(?!.*(sc|sa|c)ss)",
		"^./(?!.*(sc|sa|c)ss)",
		"(.*).(sc|sa|c)ss$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
